{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "python"
            ],
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "python311",
                        "python311Packages.pip",
                        "postgresql_16.dev",
                        "gcc"
                    ]
                },
                "install": {
                    "cmds": [
                        "pip install --break-system-packages -r requirements.txt"
                    ]
                },
                "build": {
                    "cmds": [
                        "python manage.py makemigrations",
                        "python manage.py collectstatic --noinput"
                    ]
                }
            },
            "start": {
                "cmd": "python manage.py migrate && python -m gunicorn mysite.wsgi --bind 0.0.0.0:$PORT"
            }
        }
    }
}