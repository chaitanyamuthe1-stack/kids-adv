{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "python"
            ],
            "phases": {
                "setup": {
                    "nixPkgs": ["python311", "python311Packages.pip", "postgresql_16.dev", "gcc"]
                },
                "install": {
                    "cmds": [
                        "python -m ensurepip --upgrade || true",
                        "pip install --upgrade pip || python -m pip install --upgrade pip",
                        "pip install -r requirements.txt"
                    ]
                },
                "build": {
                    "cmds": [
                        "python manage.py collectstatic --noinput"
                    ]
                }
            },
            "start": {
                "cmd": "python manage.py migrate && gunicorn mysite.wsgi --bind 0.0.0.0:$PORT"
            }
        }
    }
}